# Allow bold colors - necessary for some reason
term xterm-256color
attrcolor b ".I"
attrcolor u "-u B"
startup_message off
# Cache 30000 lines for scroll back
defscrollback 10000
# /C+a l : list windows
bind l windowlist -b
# always show status bar
hardstatus alwayslastline
# disable vbell
vbell off
autodetach on
hardstatus string '%{= kG}[%H][ %Y/%m/%d %{G}%c ]'
