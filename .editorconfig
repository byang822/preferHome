# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{xml,java}]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false

[*.{js, py, json, yml, yaml}]
indent_style = space
indent_size = 2
